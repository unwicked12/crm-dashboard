rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.role == 'admin' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isHR() {
      return isAuthenticated() && 
        (request.auth.token.role == 'hr' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr');
    }
    
    function isHROrAdmin() {
      return isAdmin() || isHR();
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default rule - deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isOwner(userId);
    }

    // Activities collection
    match /activities/{userId} {
      allow read: if isAuthenticated() && (isHROrAdmin() || isOwner(userId));
      allow write: if isAuthenticated() && (isHROrAdmin() || isOwner(userId));
    }

    // Signed Documents collection
    match /signedDocuments/{documentId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.agentId == request.auth.uid
      );
      allow write: if isHROrAdmin();
    }

    // Holiday Records collection
    match /holidayRecords/{recordId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.agentId == request.auth.uid
      );
      allow write: if isHROrAdmin();
    }

    // Holiday Balances collection
    match /holidayBalances/{balanceId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.agentId == request.auth.uid
      );
      allow write: if isHROrAdmin();
    }

    // Payslips collection
    match /payslips/{payslipId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.agentId == request.auth.uid
      );
      allow write: if isHROrAdmin();
    }

    // Contracts collection
    match /contracts/{contractId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.agentId == request.auth.uid
      );
      allow write: if isHROrAdmin();
    }

    // Knowledge Base
    match /knowledgeBase/{articleId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isAdmin() ||
        (resource.data.authorId == request.auth.uid && 
         request.resource.data.approvalStatus == resource.data.approvalStatus)
      );
      allow delete: if isAuthenticated() && (
        isAdmin() ||
        resource.data.authorId == request.auth.uid
      );
    }

    // Knowledge Base Categories
    match /knowledgeBaseCategories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isAdmin();
    }

    // Monitoring collection
    match /monitoring/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        isOwner(userId)
      );
    }

    // Activity Logs
    match /activityLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        resource.data.userId == request.auth.uid
      );
    }

    // Schedules collection
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        request.resource.data.userId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        resource.data.userId == request.auth.uid
      );
      allow delete: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        resource.data.userId == request.auth.uid
      );
    }

    // Saturday Availability History collection
    match /saturdayAvailabilityHistory/{recordId} {
      allow read: if isAuthenticated() && (
        isHROrAdmin() || 
        resource.data.userId == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        isHROrAdmin() || 
        request.resource.data.userId == request.auth.uid
      );
      // Only allow admins to delete records
      allow delete: if isAuthenticated() && isAdmin();
    }

    // Requests collection
    match /requests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        (isHROrAdmin()) ||
        (resource.data.userId == request.auth.uid && 
         request.resource.data.status == resource.data.status)
      );
      allow delete: if isAuthenticated() && (
        isAdmin() || 
        isHR() || 
        resource.data.userId == request.auth.uid
      );
    }

    // Settings collection
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
} 